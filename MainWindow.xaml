<Window x:Class="TimeOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeOverlay"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True" ShowInTaskbar="True" Loaded="MainWindow_OnLoaded"
        Title="Overlay" Height="100" Width="200">
    <Grid>
        <TextBlock x:Name="ClockTextBlock"
                   FontSize="24" Foreground="GreenYellow"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
